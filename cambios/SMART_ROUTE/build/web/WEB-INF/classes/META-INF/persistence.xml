<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SMART_ROUTEPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>entidades.Bus</class>
    <class>entidades.Horario</class>
    <class>entidades.Parada</class>
    <class>entidades.Paradamedia</class>
    <class>entidades.Posicion</class>
    <class>entidades.Ruta</class>
    <class>entidades.Tarifa</class>
    <class>entidades.Viaje</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/SMART_ROUTES?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="SMARTROUTE"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="$SMARTROUTE$"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
</persistence>
